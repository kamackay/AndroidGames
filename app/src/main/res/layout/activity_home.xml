<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#555555"
    tools:context="com.keithmackay.games.androidgames.Home">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/homescreen_gamesRoot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="300sp"
                android:layout_height="300sp"
                android:layout_gravity="start"
                android:contentDescription="@string/_2048"
                android:paddingTop="100sp"
                android:onClick="open2048"
                android:src="@drawable/_2048" />
            <ImageView
                android:layout_width="300sp"
                android:layout_height="300sp"
                android:layout_gravity="start"
                android:contentDescription="@string/corners"
                android:paddingTop="100sp"
                android:onClick="openCorners"
                android:src="@drawable/popong" />
        </LinearLayout>

    </HorizontalScrollView>
</FrameLayout>
